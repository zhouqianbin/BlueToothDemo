<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@android:color/white"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_btn_open_blut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开蓝牙"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_btn_close_blut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭蓝牙"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_btn_start_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始扫描"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_btn_stop_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止扫描"
                />
        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/main_et_send_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入发送的内容"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/main_btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recy_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
</LinearLayout>